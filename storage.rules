rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Public read for profile images
      allow write: if isOwner(userId);
    }
    
    // User uploaded files (clips, images, etc.)
    match /users/{userId}/uploads/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId)
        && request.resource.size < 10 * 1024 * 1024 // Max 10MB
        && request.resource.contentType.matches('image/.*|video/.*|application/pdf');
    }
    
    // Public shared content (e.g., shared clip images)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Temporary uploads (for processing)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }
  }
}
