{
    "name": "LinkBrain - AI Link Saver & Second Brain",
    "short_name": "LinkBrain",
    "id": "https://www.linkbrain.cloud",
    "description": "Your second brain for links and insights. Save, organize, and discover links with AI-powered summaries.",
    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "display_override": [
        "standalone",
        "window-controls-overlay"
    ],
    "orientation": "portrait-primary",
    "dir": "ltr",
    "lang": "en",
    "theme_color": "#00d9a3",
    "background_color": "#ffffff",
    "categories": [
        "productivity"
    ],
    "iarc_rating_id": "e84b9519-12de-487e-936f-8f51a726b113",
    "prefer_related_applications": false,
    "related_applications": [
        {
            "platform": "play",
            "url": "https://play.google.com/store/apps/details?id=com.linkbrain.app",
            "id": "com.linkbrain.app"
        }
    ],
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "edge_side_panel": {
        "preferred_width": 400
    },
    "scope_extensions": [
        {
            "origin": "https://www.linkbrain.cloud"
        },
        {
            "origin": "https://linkbrain.cloud"
        }
    ],
    "note_taking": {
        "new_note_url": "/?action=add"
    },
    "widgets": [
        {
            "name": "Recent Links",
            "description": "View your recently saved links",
            "tag": "recent-links",
            "ms_ac_template": "widgets/recent-links.json"
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "text/plain": [
                    ".txt"
                ],
                "text/html": [
                    ".html",
                    ".htm"
                ],
                "application/json": [
                    ".json"
                ]
            }
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+linkbrain",
            "url": "/?url=%s"
        }
    ],
    "icons": [
        {
            "src": "/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-maskable-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "/icon-maskable-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "screenshots": [
        {
            "src": "/screenshot-540x720.png",
            "sizes": "540x720",
            "type": "image/png",
            "form_factor": "narrow"
        },
        {
            "src": "/screenshot-1280x720.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        }
    ],
    "shortcuts": [
        {
            "name": "Add Link",
            "short_name": "Add",
            "description": "Quickly add a new link to LinkBrain",
            "url": "/?action=add",
            "icons": [
                {
                    "src": "/shortcut-add-192x192.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "My Links",
            "short_name": "Links",
            "description": "View all your saved links",
            "url": "/?section=links",
            "icons": [
                {
                    "src": "/shortcut-links-192x192.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/share-target",
        "method": "GET",
        "enctype": "application/x-www-form-urlencoded",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    }
}